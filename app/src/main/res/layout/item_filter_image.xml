<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/qb_px_90"
        android:layout_height="@dimen/qb_px_90"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/fiv"
            android:layout_width="@dimen/qb_px_80"
            android:layout_height="@dimen/qb_px_80"
            android:layout_marginTop="@dimen/qb_px_10"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@color/color_f6"/>

        <LinearLayout
            android:id="@+id/ll_del"
            android:layout_width="@dimen/qb_px_30"
            android:layout_height="@dimen/qb_px_30"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_del"
                android:layout_width="@dimen/qb_px_25"
                android:layout_height="@dimen/qb_px_25"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/delete"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="@dimen/qb_px_80"
            android:layout_height="@dimen/qb_px_30"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/qb_px_5"
            android:background="@drawable/buybuybuy"
            android:drawableLeft="@drawable/video_icon"
            android:drawablePadding="@dimen/qb_px_5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/qb_px_5"
            android:paddingTop="@dimen/qb_px_8"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="@dimen/qb_px_12"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>