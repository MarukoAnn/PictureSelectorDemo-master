<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e1d5"
    tools:context="com.yechaoa.pictureselectordemo.Activity.LoginActivity">
    <include
        android:id="@+id/show_mainfg1_title"
        layout="@layout/fg1_title" />
    <ImageView
        android:id="@+id/image"
        android:layout_below="@id/show_mainfg1_title"
        android:layout_width="match_parent"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="200dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_fg1"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="103dp"
        android:text="您已进入扫码巡检界面"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-103dp"
        android:text="请点击扫码完成巡检任务"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/saoma_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/saoma_btn"
        android:text="扫描巡检"
        tools:ignore="HardcodedText" />
</RelativeLayout>